#include <stdio.h>

int main() 
{
    float principal,rate,time;float si=0.0;
    printf("Enter the principal ");
    scanf("%f",&principal);
    printf("Enter the rate ");
    scanf("%f",&rate);
    printf("Enter the time(in years) ");
    scanf("%f",&time);
    si=(principal*rate*time)/100;
    printf("The Simple Interest is  %.2f",si);
    return 0;
}
